<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.HomeUserFragment">

    <include
        android:id="@+id/header_user"
        layout="@layout/header_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nearYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cerca Tuyo"
        android:textSize="15dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_user" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Fecha:"
        android:fontFamily="@font/source_sans_pro_bold"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/nearYou"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/custom_input"
        android:hint="DD/MM/YYYY"
        android:fontFamily="@font/source_sans_pro_bold"
        android:paddingStart="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/textDate"
        app:layout_constraintStart_toEndOf="@+id/textDate"
        app:layout_constraintTop_toTopOf="@+id/textDate" />

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Hora:"
        android:fontFamily="@font/source_sans_pro_bold"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/textDate"
        app:layout_constraintStart_toStartOf="@+id/textDate"
        app:layout_constraintTop_toBottomOf="@+id/textDate" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour12"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/custom_button_hour"
        android:text="12"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour"
        app:layout_constraintStart_toEndOf="@+id/hour"
        app:layout_constraintTop_toTopOf="@+id/hour" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour13"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="13"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour12"
        app:layout_constraintStart_toEndOf="@+id/hour12"
        app:layout_constraintTop_toTopOf="@+id/hour12" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour14"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="14"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour13"
        app:layout_constraintStart_toEndOf="@+id/hour13"
        app:layout_constraintTop_toTopOf="@+id/hour13" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour15"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="15"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour14"
        app:layout_constraintStart_toEndOf="@+id/hour14"
        app:layout_constraintTop_toTopOf="@+id/hour14" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour16"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="16"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour15"
        app:layout_constraintStart_toEndOf="@+id/hour15"
        app:layout_constraintTop_toTopOf="@+id/hour15" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour17"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="17"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour16"
        app:layout_constraintStart_toEndOf="@+id/hour16"
        app:layout_constraintTop_toTopOf="@+id/hour16" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour18"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="18"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour17"
        app:layout_constraintStart_toEndOf="@+id/hour17"
        app:layout_constraintTop_toTopOf="@+id/hour17" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour19"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="19"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour18"
        app:layout_constraintStart_toEndOf="@+id/hour18"
        app:layout_constraintTop_toTopOf="@+id/hour18" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour20"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="20"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour19"
        app:layout_constraintStart_toEndOf="@+id/hour19"
        app:layout_constraintTop_toTopOf="@+id/hour19" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour21"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="21"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintEnd_toEndOf="@+id/hour12"
        app:layout_constraintStart_toStartOf="@+id/hour12"
        app:layout_constraintTop_toBottomOf="@+id/hour12" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour22"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="22"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour21"
        app:layout_constraintStart_toEndOf="@+id/hour21"
        app:layout_constraintTop_toTopOf="@+id/hour21" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hour23"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_button_hour"
        android:text="23"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintBottom_toBottomOf="@+id/hour22"
        app:layout_constraintStart_toEndOf="@+id/hour22"
        app:layout_constraintTop_toTopOf="@+id/hour22" />

    <TextView
        android:id="@+id/titleSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TamaÃ±o de la cancha:"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintTop_toTopOf="@+id/spinnerSizePlayers"
        app:layout_constraintBottom_toBottomOf="@id/spinnerSizePlayers"
        app:layout_constraintStart_toStartOf="@+id/hour"/>

    <Spinner
        android:id="@+id/spinnerSizePlayers"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/titleSize"
        app:layout_constraintTop_toBottomOf="@id/hour23"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"
        android:text="Buscar"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSizePlayers" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSportCenterNearYou"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSearch" />
</androidx.constraintlayout.widget.ConstraintLayout>