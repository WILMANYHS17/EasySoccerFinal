<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemSelectSportCenter"
    android:background="@drawable/box_text">


    <ImageView
        android:id="@+id/imageSelectSportCenter"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/titleSportCenter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageSelectSportCenter"
        app:layout_constraintTop_toTopOf="@+id/imageSelectSportCenter"/>

    <TextView
        android:id="@+id/titleNitSportCenter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintStart_toStartOf="@+id/titleSportCenter"
        app:layout_constraintEnd_toEndOf="@+id/titleSportCenter"
        app:layout_constraintTop_toBottomOf="@+id/titleSportCenter"/>
    <TextView
        android:id="@+id/titleAddressSportCenter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintStart_toStartOf="@+id/titleNitSportCenter"
        app:layout_constraintEnd_toEndOf="@id/titleNitSportCenter"
        app:layout_constraintTop_toBottomOf="@+id/titleNitSportCenter"/>
</androidx.constraintlayout.widget.ConstraintLayout>