<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCommentsUsers"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toBottomOf="@+id/titleComments"
    android:background="@drawable/box_text">

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/user"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/commentsUsers"
        app:layout_constraintTop_toTopOf="@+id/commentsUsers"
        app:layout_constraintBottom_toBottomOf="@+id/commentsUsers"
        />

    <TextView
        android:id="@+id/nameUserComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@+id/imageProfile"
        app:layout_constraintTop_toTopOf="@+id/imageProfile"
        app:layout_constraintEnd_toEndOf="@+id/commentsUsers"
        />

    <TextView
        android:id="@+id/textCommentUser"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toBottomOf="@+id/nameUserComments"
        app:layout_constraintStart_toStartOf="@+id/nameUserComments"
        app:layout_constraintEnd_toEndOf="@+id/commentsUsers"
        app:layout_constraintBottom_toBottomOf="@+id/commentsUsers"
        />


</androidx.constraintlayout.widget.ConstraintLayout>